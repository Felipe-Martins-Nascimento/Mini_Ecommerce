@model Virtualshop.Web.Models.ProductViewModel

<form method="post">
    <input asp-for="Id" type="hidden" />
    <h3 class="mb-5">Detalhes do Produto</h3>
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid" src="@Url.Content("~/images/" + Model.ImageURL)" />
        </div>
        <div class="col-md-4">
            <h3>@Model.Name</h3>
            <p class="mb-4">@Model.Description</p>
            <p class="mb-4 text-black">
                <b>@Model.Price.ToString("C")&nbsp;(@Model.Stock items)</b>
            </p>

            <div class="row mb-3 text-black">
                <label asp-for="Quantity" class="col-form-label col-md-2">Qtde: </label>
                <div class="col-md-10">
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-md-6">
                    <a asp-action="Index" class="btn btn-outline-info w-100">Voltar para a lista</a>
                </div>
                <div class="col-md-6">
                    <button type="submit" class="btn btn-outline-success w-100">Adicionar ao carrinho</button>
                </div>
            </div>
        </div>
    </div>
</form>